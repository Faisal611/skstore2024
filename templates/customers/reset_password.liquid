<div class="account-template">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-5 col-md-5">
        <div class="header text-center my-5">
          <h1>Recover your password</h1>
        </div>
        {% form 'reset_customer_password' %}          
          <div class="form-group mb-4">
            <input type="password" class="form-control" name="customer[password]" placeholder="Password">
          {% if form.errors contains 'password' %}
              <small class="text-danger">This filed can't be blank!</small>
            {% endif %}
          </div>
          <div class="form-group mb-4">
            <input type="password" class="form-control" name="customer[password_confirmation]" placeholder="Confirm Password">
            {% if form.errors contains 'password_confirmation' %}
              <small class="text-danger">The password confirmation must match the provided password!</small>
            {% endif %}
          </div>
          <div class="form-group">
            <div class="d-flex align-items-center">
              <button type="submit" class="btn btn-secondary me-3">Reset Now</button>             
            </div>            
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>