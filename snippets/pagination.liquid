
{%- if paginate.pages > 1 -%}
  <nav role="navigation" aria-label="Page navigation">
    <ul class="pagination">
      {%- if paginate.previous %}
        <li class="page-item">
          <a href="{{ paginate.previous.url }}" class="page-link">
            <span aria-hidden="true">&laquo;</span>
            <span class="visually-hidden">Previous</span>
          </a>
        </li>
      {%- else -%}
        <li class="page-item disabled">
          <span aria-hidden="true" class="page-link">&laquo;</span>
          <span class="visually-hidden">Previous</span>
        </li>
      {%- endif -%}

      {%- for part in paginate.parts -%}
        {%- if part.is_link -%}
          <li class="page-item">
            <a href="{{ part.url }}" class="page-link"> <span class="visually-hidden">page</span> {{ part.title }} </a>
          </li>
        {%- else -%}          
          <li class="page-item {%- if part.title == paginate.current_page %} active {%- endif -%}" aria-current="page">
            <span class="page-link">{{ part.title }}</span>
            <span class="visually-hidden">page</span>
          </li>
        {%- endif -%}
      {%- endfor -%}

      {%- if paginate.next -%}
        <li>
          <a href="{{ paginate.next.url }}" class="page-link">
            <span class="visually-hidden">Next</span>
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      {%- else -%}
        <li class="disabled">
          <span class="visually-hidden">Next</span>
          <span aria-hidden="true" class="page-link">&raquo;</span>
        </li>
      {%- endif -%}
    </ul>
  </nav>
{%- endif -%}
